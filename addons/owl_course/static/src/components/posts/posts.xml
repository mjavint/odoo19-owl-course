<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="owl_course.Posts">
        <div class="o_posts_container p-4">
            <!-- Barra de Búsqueda y Controles -->
            <div class="search-controls-section">
                <h1 class="posts-title mb-3">Posts</h1>
                <div class="row g-3 align-items-center">
                    <div class="col-md-6">
                        <div class="search-box">
                            <i class="fa fa-search search-icon" />
                            <input
                                t-model="state.searchText"
                                t-on-input="onSearchInput"
                                type="text"
                                class="form-control search-input"
                                placeholder="Buscar en título, contenido o usuario..." />
                            <button
                                t-if="state.searchText"
                                t-on-click="() => {
                                    this.state.searchText = '';
                                    this.onSearchInput({target: {value: ''}});
                                }"
                                class="clear-search-btn"
                                title="Limpiar búsqueda">
                                <i class="fa fa-times" />
                            </button>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="items-per-page-selector">
                            <label class="form-label mb-1">
                                <i class="fa fa-th-list me-1" />
                                Items por página:
                            </label>
                            <select
                                t-model="state.itemsPerPage"
                                t-on-change="changeItemsPerPage"
                                class="form-select">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="20">20</option>
                                <option value="50">50</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button
                            t-if="state.searchText"
                            t-on-click="clearFilters"
                            class="btn btn-outline-danger w-100">
                            <i class="fa fa-times-circle me-1" />
                            Limpiar Filtros
                        </button>
                    </div>
                </div>
            </div>
            <!-- Error State -->
            <div t-if="state.error" class="alert alert-danger">
                <i class="fa fa-exclamation-triangle me-2" />
                <t t-esc="state.error" />
            </div>
            <!-- Posts Table -->
            <div t-if="state.posts.length" class="posts-wrapper">
                <div class="posts-scroll-container">
                    <div class="posts-table-container">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="posts-table__col-id">#</th>
                                    <th class="posts-table__col-title">Título</th>
                                    <th class="posts-table__col-content">Contenido</th>
                                    <th class="posts-table__col-user">Usuario</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr
                                    t-foreach="state.posts"
                                    t-as="post"
                                    t-key="post.id">
                                    <td>
                                        <t t-esc="post.id" />
                                    </td>
                                    <td>
                                        <div class="post-title">
                                            <i class="fa fa-file-text-o me-2 text-muted" />
                                            <t t-esc="post.title" />
                                        </div>
                                    </td>
                                    <td>
                                        <div class="post-body">
                                            <t t-esc="post.body ? (post.body.substring(0, 80) + '...') : 'Sin contenido'" />
                                        </div>
                                    </td>
                                    <td class="posts-table__col-user">
                                        <span class="user-badge-table">
                                            <i class="fa fa-user me-1" />
                                            <t t-esc="post.userId" />
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- Pagination inside wrapper but outside scroll -->
                <div class="pagination-info">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="pagination-text">
                            <i class="fa fa-list-ol me-2" />
                            Mostrando
                            <strong>
                                <t t-esc="fromItems" />
                            </strong>
                            a
                            <strong>
                                <t t-esc="toItems" />
                            </strong>
                            de
                            <strong>
                                <t t-esc="state.posts.length" />
                            </strong>
                            resultados
                        </div>
                        <div class="pagination-controls">
                            <div class="btn-group" role="group">
                                <button
                                    t-att-disabled="state.currentPage === 1"
                                    t-on-click="() => this.goToPage(1)"
                                    class="btn btn-outline-secondary"
                                    title="Primera página">
                                    <i class="fa fa-angle-double-left" />
                                </button>
                                <button
                                    t-att-disabled="state.currentPage === 1"
                                    t-on-click="prevPage"
                                    class="btn btn-outline-secondary"
                                    title="Página anterior">
                                    <i class="fa fa-chevron-left" />
                                </button>
                                <button
                                    class="btn btn-primary page-indicator"
                                    disabled="disabled">
                                    <strong>
                                        <t t-esc="state.currentPage" />
                                    </strong>
                                    /
                                    <t t-esc="totalPages" />
                                </button>
                                <button
                                    t-att-disabled="state.currentPage >= totalPages"
                                    t-on-click="nextPage"
                                    class="btn btn-outline-secondary"
                                    title="Página siguiente">
                                    <i class="fa fa-chevron-right" />
                                </button>
                                <button
                                    t-att-disabled="state.currentPage >= totalPages"
                                    t-on-click="() => this.goToPage(totalPages)"
                                    class="btn btn-outline-secondary"
                                    title="Última página">
                                    <i class="fa fa-angle-double-right" />
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Empty State -->
                <div
                    t-if="!state.posts.length and !state.error"
                    class="empty-state text-center">
                    <i class="fa fa-search fa-4x mb-3 d-block" />
                    <p class="mb-0">No se encontraron posts para este filtro</p>
                </div>
            </div>
        </div>
    </t>
</templates>
