<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="owl_course.CompanyDashboard">
        <div class="o_dashboard_container p-4">
            <div class="o_dashboard_header mb-4">
                <h1 class="text-primary">Dashboard Empresarial</h1>
                <p class="text-muted">Vista general de métricas clave</p>
            </div>
            <t t-if="state.loading">
                <div class="text-center p-5">
                    <i class="fa fa-spin fa-spinner fa-3x text-muted" />
                    <p class="mt-3">Cargando datos...</p>
                </div>
            </t>
            <t t-else="">
                <div class="row g-3">
                    <!-- Card de Ventas -->
                    <div class="col-md-4">
                        <div
                            t-on-click="openSalesView"
                            class="card border-primary shadow-sm h-100">
                            <div class="card-body text-center">
                                <i class="fa fa-shopping-cart fa-3x text-primary mb-3" />
                                <h5 class="card-title">Total Ventas</h5>
                                <h2 class="text-primary mb-0">
                                    <t t-esc="state.totalSales" />
                                </h2>
                                <small class="text-muted">Órdenes confirmadas</small>
                            </div>
                        </div>
                    </div>
                    <!-- Card de Clientes -->
                    <div class="col-md-4">
                        <div
                            t-on-click="openCustomersView"
                            class="card border-success shadow-sm h-100">
                            <div class="card-body text-center">
                                <i class="fa fa-users fa-3x text-success mb-3" />
                                <h5 class="card-title">Clientes</h5>
                                <h2 class="text-success mb-0">
                                    <t t-esc="state.totalCustomers" />
                                </h2>
                                <small class="text-muted">Clientes activos</small>
                            </div>
                        </div>
                    </div>
                    <!-- Card de Productos -->
                    <div class="col-md-4">
                        <div
                            t-on-click="openProductsView"
                            class="card border-info shadow-sm h-100">
                            <div class="card-body text-center">
                                <i class="fa fa-cubes fa-3x text-info mb-3" />
                                <h5 class="card-title">Productos</h5>
                                <h2 class="text-info mb-0">
                                    <t t-esc="state.totalProducts" />
                                </h2>
                                <small class="text-muted">En catálogo</small>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Sección adicional de información -->
                <div class="alert alert-info mt-4" role="alert">
                    <i class="fa fa-info-circle" />
                    <strong>Tip:</strong>
                    Haz clic en las tarjetas para ver más detalles
                </div>
            </t>
        </div>
    </t>
</templates>
