<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl_course.Reloj">
        <div class="clock-widget">
            <div class="clock-display">
                <div class="time" t-esc="formattedTime"/>
                <div class="date" t-esc="formattedDate"/>
            </div>

            <div class="clock-controls">
                <button class="btn" t-att-class="state.isRunning ? 'btn-warning' : 'btn-success'" t-on-click="toggleClock">
                    <i t-att-class="state.isRunning ? 'fa fa-pause' : 'fa fa-play'"/>
                    <t t-if="state.isRunning">Pausar</t>
                    <t t-else="">Iniciar</t>
                </button>
            </div>

            <div class="clock-status">
                <span t-att-class="state.isRunning ? 'status-running' : 'status-stopped'">
                    <t t-if="state.isRunning">● En ejecución</t>
                    <t t-else="">○ Pausado</t>
                </span>
            </div>
        </div>
    </t>
</templates>
